{
  "manifest_version": 3,
  "name": "Qurʾān Locator",
  "version": "1.0.0",
  "description": "Audio-based Quran verse locator and reader",
  
  "permissions": [
    "storage",
    "tabCapture"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Qurʾān Locator",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["data/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
